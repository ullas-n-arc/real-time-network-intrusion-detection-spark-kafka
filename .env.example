# Environment variables for NIDS
# Copy this file to .env and modify as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=network_logs
KAFKA_ALERTS_TOPIC=intrusion_alerts

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=nids_db
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Spark Configuration
SPARK_MASTER=local[*]

# Dashboard Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
